<% layout('./layouts/layouts.ejs') -%>
<body>
    <form action="/listing/<%= listing._id %>?_method=PUT" method="post">
 <div class="row mt-3 ">
    <div class="col-6 offset-3">
        <div class="title mt-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control">
        </div>
        
        <div class="location mt-3">
            <label for="title" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control">
        </div>

            <div class="row">
                <div class="country mt-3 col-md-3">
                    <label for="title" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control">
                </div>
                
                <div class="price mt-3 col-md-3" >
                    <label for="title" class="form-label">Price</label>
                    <input type="text" name="listing[price]" value="<%= listing.price %>" class="form-control">
                </div>
            </div>
        
        
        <div class="description mt-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" class="form-control" name="listing[description]" ><%= listing.description %></textarea>
        </div>
        
        <button class="btn btn-dark mt-5 edit-btn">Update</button>
    </div>
 </div>
   
    </form>
</body>
